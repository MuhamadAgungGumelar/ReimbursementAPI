@model ReimbursementWebApp.Models.CreateReimburseViewModel

<div class="container-fluid py-4" id="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Reimbursement Form</h4>
                </div>
                <div class="card-content">
                    <div class="card-body">
                        <form asp-action="CreateReimbursement" class="form" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div id="employeeGuid" style="display: none;">
                                <input asp-for="EmployeeGuid" value="@* dapetin employeeGuid dari session *@" />
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-6">
                                    <div class="mb-4 d-flex justify-content-center">
                                        <img class="img-fluid img-thumbnail rounded" id="selectedImage" src="~/assets/img/upload-preview.png"
                                             alt="example placeholder" style="width: 500px;" />
                                    </div>
                                    <div class="mb-3">
                                        <label for="formFile" class="form-label">Receipt Reimbursement</label>
                                        <input asp-for="ImageFile" class="form-control" type="file" id="ImageFile" accept="image/*" onchange="previewImage(event)" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="reimbursement-name-column">Reimbursement Name</label>
                                        <input asp-for="Name" type="text" id="reimbursement-name-column" class="form-control" placeholder="Reimbursement Name" name="Name">
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="value-column">Value</label>
                                        <input asp-for="Value" type="number" id="value-column" class="form-control" placeholder="Value" name="Value">
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="status-column">Status</label>
                                        <input asp-for="Status" type="number" id="status-column" class="form-control" name="Status" placeholder="Status">
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="description-column">Description</label>
                                        <input asp-for="Description" type="text" id="description-column" class="form-control" name="Description" placeholder="Description">
                                    </div>
                                </div>
                                <div class="col-12 d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary me-1 mb-1">Submit</button>
                                    <button type="reset" class="btn btn-light-secondary me-1 mb-1">Reset</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/reimbursement.js" asp-append-version="true"></script>
}